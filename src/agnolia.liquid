{% assign posts = collections.posts %}
[
{% for post in posts | reverse %}
	{
		"title": {{post.data.title | jsonify}},
		"date":"{{ page.date }}",
		"url":"{{ post.url | prepend: site.url }}",
		"content":{{ post.templateContent | algExcerpt | jsonify }}
	}{% unless forloop.last %},{% endunless %}
{% endfor %}
]
